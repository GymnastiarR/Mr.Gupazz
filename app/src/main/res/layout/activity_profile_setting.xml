<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".ProfileSettingFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-75dp">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="540dp"
            android:layout_height="280dp"
            android:src="@drawable/img_profile_setting"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/img_profile_setting_next"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.099"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <EditText
            android:id="@+id/et_FullName"
            style="@style/Text.Medium.14sp"
            android:layout_width="335dp"
            android:layout_height="52dp"
            android:layout_marginTop="12dp"
            android:background="@color/secondary_shade_8"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:inputType="textPersonName"
            android:text="..."
            android:textColor="@color/secondary_shade_1"
            app:layout_constraintEnd_toEndOf="@+id/textView2"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />


        <TextView
            android:id="@+id/textView2"
            style="@style/Text.Regular.14sp"
            android:layout_width="124dp"
            android:layout_height="19dp"
            android:layout_marginTop="212dp"
            android:text="Full Name"
            app:layout_constraintEnd_toEndOf="@+id/imageView6"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/imageView6"
            app:layout_constraintTop_toBottomOf="@+id/imageView6" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/img_profile_setting_edit_2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.879"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <EditText
            android:id="@+id/et_Email"
            style="@style/Text.Medium.14sp"
            android:layout_width="335dp"
            android:layout_height="52dp"
            android:layout_marginTop="16dp"
            android:background="@color/secondary_shade_8"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:text="..."
            android:textColor="@color/secondary_shade_1"
            app:layout_constraintEnd_toEndOf="@+id/textView3"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <TextView
            android:id="@+id/textView4"
            style="@style/Text.Regular.14sp"
            android:layout_width="227dp"
            android:layout_height="21dp"
            android:layout_marginTop="76dp"
            android:text="Password"
            app:layout_constraintEnd_toEndOf="@+id/imageView6"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/imageView6"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <EditText
            android:id="@+id/et_password"
            style="@style/Text.Medium.14sp"
            android:layout_width="335dp"
            android:layout_height="52dp"
            android:layout_marginTop="16dp"
            android:background="@color/secondary_shade_8"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:text="*********"
            android:textColor="@color/secondary_shade_1"
            app:layout_constraintEnd_toEndOf="@+id/textView4"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/textView4"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <Button
            android:id="@+id/btn_1"
            style="@style/LongButton"
            android:layout_width="335dp"
            android:layout_height="51dp"
            android:layout_marginTop="16dp"
            android:text="Save"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_password" />

        <Button
            android:id="@+id/btn_2"
            style="@style/LongButton"
            android:layout_width="335dp"
            android:layout_marginTop="12dp"
            android:text="Logout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_1" />

        <TextView
            android:id="@+id/textView3"
            style="@style/Text.Regular.14sp"
            android:layout_width="124dp"
            android:layout_height="19dp"
            android:layout_marginTop="68dp"
            android:text="Email"
            app:layout_constraintEnd_toEndOf="@+id/imageView6"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/imageView6"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
