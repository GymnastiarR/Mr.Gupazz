                app:layout_constraintLeft_toLeftOf="parent">
                <androidx.cardview.widget.CardView
                    android:layout_width="76dp"
                    android:layout_height="76dp"
                    android:layout_margin="2dp"
                    app:cardBackgroundColor="@color/secondary_yellow"
