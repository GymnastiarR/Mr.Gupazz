                        android:layout_gravity="center"
                        android:outlineSpotShadowColor="@color/primary_white"
                        app:cardBackgroundColor="@color/primary_white"
                        app:cardCornerRadius="76dp" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="58dp"
                        android:layout_height="58dp"
                        android:layout_gravity="center"
                        android:outlineSpotShadowColor="@color/primary_white"
                        app:cardBackgroundColor="@color/secondary_blue_2"
                        app:cardCornerRadius="76dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_ear" />
                    </androidx.cardview.widget.CardView>
                </androidx.cardview.widget.CardView>

                <TextView
                    style="@style/Text.SemiBold.16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="16dp"
                    android:text="Listening" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/first">
            <LinearLayout
                android:id="@+id/marker"
                android:layout_width="40dp"
                android:layout_height="0dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:orientation="vertical"/>
            <ImageView
                android:layout_width="120dp"
                android:layout_height="20dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_path"
                app:layout_constraintLeft_toRightOf="@id/marker"
                app:layout_constraintTop_toTopOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:outlineSpotShadowColor="@color/primary_white">
            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="0dp"/>
            <androidx.cardview.widget.CardView
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:layout_margin="2dp"
                app:cardBackgroundColor="@color/secondary_yellow"
                app:cardCornerRadius="76dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_gravity="center"
                    android:outlineSpotShadowColor="@color/primary_white"
                    app:cardBackgroundColor="@color/primary_white"
                    app:cardCornerRadius="76dp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="58dp"
                    android:layout_height="58dp"
                    android:layout_gravity="center"
                    android:outlineSpotShadowColor="@color/primary_white"
                    app:cardBackgroundColor="@color/secondary_blue_2"
                    app:cardCornerRadius="76dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_abc" />
                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>
            <TextView
                style="@style/Text.SemiBold.16sp"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="16dp"
                android:text="Listening" />
