<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_title"
            style="@style/Text.SemiBold.24sp"
            android:layout_width="337dp"
            android:layout_height="44dp"
            android:layout_marginTop="24dp"
            android:gravity="center_horizontal"
            android:text="Listening"
            android:textColor="@color/secondary_shade_1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_main_image"
            android:layout_width="349dp"
            android:layout_height="348dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/img_listening"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_title" />

        <ImageView
            android:id="@+id/iv_sound_icon"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/img_listening_sound"
            app:layout_constraintEnd_toEndOf="@+id/iv_main_image"
            app:layout_constraintStart_toStartOf="@+id/iv_main_image"
            app:layout_constraintTop_toBottomOf="@+id/iv_main_image" />

        <Button
            android:id="@+id/btn_1"
            style="@style/RegularButton"
            android:layout_marginTop="16dp"
            android:text="flower"
            android:textColor="@color/secondary_shade_1"
            app:layout_constraintEnd_toEndOf="@+id/iv_sound_icon"
            app:layout_constraintStart_toStartOf="@+id/iv_sound_icon"
            app:layout_constraintTop_toBottomOf="@+id/iv_sound_icon" />

        <Button
            android:id="@+id/btn_2"
            style="@style/RegularButton"
            android:layout_marginTop="16dp"
            android:text="blower"
            android:textColor="@color/secondary_shade_1"
            app:layout_constraintEnd_toEndOf="@+id/btn_1"
            app:layout_constraintStart_toStartOf="@+id/btn_1"
            app:layout_constraintTop_toBottomOf="@+id/btn_1" />

        <Button
            android:id="@+id/btn_check"
            style="@style/LongButton"
            android:layout_marginTop="12dp"
            android:text="Check"
            app:layout_constraintEnd_toEndOf="@+id/btn_2"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintStart_toStartOf="@+id/btn_2"
            app:layout_constraintTop_toBottomOf="@+id/btn_2" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
