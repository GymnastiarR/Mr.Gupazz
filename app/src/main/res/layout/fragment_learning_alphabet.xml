<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".learningactivityfragment.LearningAlphabet">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="38dp"
        android:layout_height="30dp"
        android:layout_marginTop="56dp"
        android:src="@drawable/baseline_arrow_back_ios_24"
        app:layout_constraintEnd_toStartOf="@+id/tv_title"
        app:layout_constraintHorizontal_bias="0.252"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_title"
        style="@style/Text.SemiBold.24sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:text="G"
        android:textColor="@color/secondary_shade_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:layout_marginHorizontal="25dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <EditText
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:hint="Type here to search..."
                />

            <ImageButton
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:src="@drawable/search" />
        </LinearLayout>

        <TextView
            style="@style/Text.Regular.15sp"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginBottom="9dp"
            android:background="@color/secondary_shade_8"
            android:paddingHorizontal="15dp"
            android:paddingVertical="6dp"
            android:text="Gealic"
            android:textColor="@color/secondary_shade_1" />

        <TextView
            style="@style/Text.Regular.15sp"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginBottom="9dp"
            android:background="@color/secondary_shade_8"
            android:paddingHorizontal="15dp"
            android:paddingVertical="6dp"
            android:text="Gemini"
            android:textColor="@color/secondary_shade_1" />

        <TextView
            style="@style/Text.Regular.15sp"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginBottom="9dp"
            android:background="@color/secondary_shade_8"
            android:paddingHorizontal="15dp"
            android:paddingVertical="6dp"
            android:text="German"
            android:textColor="@color/secondary_shade_1" />

        <TextView
            style="@style/Text.Regular.15sp"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginBottom="9dp"
            android:background="@color/secondary_shade_8"
            android:paddingHorizontal="15dp"
            android:paddingVertical="6dp"
            android:text="Germany"
            android:textColor="@color/secondary_shade_1" />

        <TextView
            style="@style/Text.Regular.15sp"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginBottom="9dp"
            android:background="@color/secondary_shade_8"
            android:paddingHorizontal="15dp"
            android:paddingVertical="6dp"
            android:text="Good Friday"
            android:textColor="@color/secondary_shade_1" />

        <TextView
            style="@style/Text.Regular.15sp"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginBottom="9dp"
            android:background="@color/secondary_shade_8"
            android:paddingHorizontal="15dp"
            android:paddingVertical="6dp"
            android:text="Great Britain"
            android:textColor="@color/secondary_shade_1" />

        <TextView
            style="@style/Text.Regular.15sp"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginBottom="9dp"
            android:background="@color/secondary_shade_8"
            android:paddingHorizontal="15dp"
            android:paddingVertical="6dp"
            android:text="Grecian"
            android:textColor="@color/secondary_shade_1" />

        <TextView
            style="@style/Text.Regular.15sp"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginBottom="9dp"
            android:background="@color/secondary_shade_8"
            android:paddingHorizontal="15dp"
            android:paddingVertical="6dp"
            android:text="Greece"
            android:textColor="@color/secondary_shade_1" />

        <TextView
            style="@style/Text.Regular.15sp"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginBottom="9dp"
            android:background="@color/secondary_shade_8"
            android:paddingHorizontal="15dp"
            android:paddingVertical="6dp"
            android:text="Greek"
            android:textColor="@color/secondary_shade_1" />

        <TextView
            style="@style/Text.Regular.15sp"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginBottom="9dp"
            android:background="@color/secondary_shade_8"
            android:paddingHorizontal="15dp"
            android:paddingVertical="6dp"
            android:text="Generous"
            android:textColor="@color/secondary_shade_1" />

        <TextView
            style="@style/Text.Regular.15sp"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginBottom="9dp"
            android:background="@color/secondary_shade_8"
            android:paddingHorizontal="15dp"
            android:paddingVertical="6dp"
            android:text="Gentle"
            android:textColor="@color/secondary_shade_1" />

        <TextView
            style="@style/Text.Regular.15sp"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginBottom="9dp"
            android:background="@color/secondary_shade_8"
            android:paddingHorizontal="15dp"
            android:paddingVertical="6dp"
            android:text="Gergous"
            android:textColor="@color/secondary_shade_1" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>